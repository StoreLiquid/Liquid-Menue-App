@tailwind base;
@tailwind components;
@tailwind utilities;

:root {
  --app-bg: #1A1820;
  --app-bg-gradient: linear-gradient(to bottom right, #2A2832, #1A1820);
  --text-color: #ffffff;
}

/* Grundlegende Stile fÃ¼r alle Browser */
html, body {
  background-color: var(--app-bg);
  color: var(--text-color);
  min-height: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
  overscroll-behavior: none;
  -webkit-overflow-scrolling: touch;
  overflow-x: hidden;
}

html {
  overflow-y: auto;
}

body {
  font-family: -apple-system, BlinkMacSystemFont, Segoe UI, Roboto, Oxygen,
    Ubuntu, Cantarell, Fira Sans, Droid Sans, Helvetica Neue, sans-serif;
  display: flex;
  flex-direction: column;
  overflow-y: auto !important;
  position: relative !important;
}

/* Chrome-spezifische Anpassungen */
@media screen and (-webkit-min-device-pixel-ratio:0) {
  html, body {
    background-color: transparent !important;
    overflow-y: auto !important;
    overflow-x: hidden !important;
    height: auto !important;
    min-height: 100% !important;
  }
  
  body {
    position: relative !important;
    overflow-y: auto !important;
    background-color: transparent !important;
  }
  
  .min-h-screen.relative {
    background-color: transparent !important;
    overflow-y: visible !important;
    min-height: 100vh !important;
  }
  
  /* Sicherstellen, dass die Hintergrund-Elemente in Chrome korrekt angezeigt werden */
  .fixed.bg-gradient-to-br,
  #app-bg-gradient {
    z-index: -1 !important;
    will-change: transform;
    backface-visibility: hidden;
    position: fixed !important;
    top: 0 !important;
    left: 0 !important;
    right: 0 !important;
    bottom: 0 !important;
    width: 100vw !important;
    height: 100vh !important;
    pointer-events: none;
    transform: translateZ(0);
    -webkit-transform: translateZ(0);
  }
  
  #app-bg-pattern, 
  #app-top-glow, 
  #app-corner-glow-1, 
  #app-corner-glow-2 {
    position: fixed !important;
    z-index: -1 !important;
    pointer-events: none;
    transform: translateZ(0);
    -webkit-transform: translateZ(0);
  }
  
  #__next {
    background-color: transparent !important;
  }
}

#__next {
  min-height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  position: relative;
  overflow-x: hidden;
  overflow-y: visible !important;
}

/* Korrektur fÃ¼r absolute positionierte Elemente */
.min-h-screen.relative {
  min-height: 100vh;
  width: 100%;
  z-index: 0;
  overflow-y: auto !important;
}

/* Sicherstellen, dass der Footer den Hintergrund hat */
footer {
  background-color: var(--app-bg) !important;
  position: relative;
  z-index: 10;
  width: 100%;
  color: #fff;
  border-color: rgba(255, 255, 255, 0.1) !important;
}

/* Animation fÃ¼r den Header-Verlauf */
@keyframes gradient {
  0% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
  100% {
    background-position: 0% 50%;
  }
}

.animate-gradient-slow {
  background-size: 200% 200%;
  animation: gradient 15s ease infinite;
}

/* Subtile Pulse-Animation fÃ¼r Glanzeffekte */
@keyframes pulse-light {
  0% {
    opacity: 0.05;
  }
  50% {
    opacity: 0.2;
  }
  100% {
    opacity: 0.05;
  }
}

.animate-pulse-light {
  animation: pulse-light 6s ease-in-out infinite;
}

/* Glasmorphismus-Komponenten */
.glass-panel {
  @apply bg-black/20 backdrop-blur-sm border border-white/10 rounded-xl shadow-lg;
}

/* iOS-spezifische Anpassungen */
@supports (-webkit-touch-callout: none) {
  /* Entfernt den weiÃŸen Ãœberziehbereich bei Pull-to-refresh */
  body {
    background-attachment: fixed;
  }
  
  /* Erweitert den Hintergrund nach oben fÃ¼r Pull-to-Refresh */
  body::before {
    content: '';
    position: fixed;
    top: -200px;
    left: 0;
    right: 0;
    height: 200px;
    background-color: var(--app-bg);
    z-index: -1;
  }
}

/* PWA im Vollbildmodus */
@media all and (display-mode: standalone) {
  html {
    background-color: var(--app-bg);
    height: 100%;
    overflow-y: auto !important;
  }
  
  body {
    width: 100%;
    height: 100%;
    overflow: auto !important;
    background-color: var(--app-bg);
    -webkit-overflow-scrolling: touch;
  }
  
  /* Sicherstellen, dass der Footer im Standalone-Modus korrekt angezeigt wird */
  footer {
    background-color: var(--app-bg) !important;
    border-top-color: rgba(255, 255, 255, 0.1) !important;
  }
}

a {
  color: inherit;
  text-decoration: none;
}

* {
  box-sizing: border-box;
} 
